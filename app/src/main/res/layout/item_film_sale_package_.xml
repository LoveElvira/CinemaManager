<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_film_sale__layout"
    style="@style/MatchWrap"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_10">

    <View
        android:id="@+id/item_film_sale__line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/size_10"
        android:background="@drawable/line_dash"
        android:layerType="software"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/WrapWrap"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true"
            android:layout_marginRight="@dimen/size_10">

            <ImageView
                android:id="@+id/item_film_sale__select"
                style="@style/WrapWrap"
                android:scaleType="centerCrop"
                android:src="@mipmap/cancle" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

        <ImageView
            android:id="@+id/item_film_sale__image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                style="@style/MatchWrap"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_film_sale__package"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="套餐1"
                    android:textColor="@color/black_363636"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/item_film_sale__price"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/size_10"
                    android:text="¥20"
                    android:textColor="@color/red_de2500"
                    android:textSize="@dimen/text_16" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_film_sale__package_content"
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/size_5"
                android:text="中份爆米花+++++++"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_film_sale__discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="每张影票立减1元"
                android:textColor="@color/white"
                android:background="@drawable/radius_red_1"
                android:padding="@dimen/size_2"
                android:textSize="@dimen/text_10" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
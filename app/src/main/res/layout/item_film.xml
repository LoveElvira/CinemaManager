    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_film__cardview"
        style="@style/MatchWrap"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/size_5">

            <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/bg_shadow"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <ImageView
                    android:id="@+id/item_film__image"
                    style="@style/MatchMatch"
                    android:scaleType="centerCrop" />
            </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_film__name"
                    style="@style/WrapWrap"
                    android:layout_marginBottom="@dimen/size_5"
                    android:layout_marginLeft="@dimen/size_10"
                    android:textColor="@color/black_363636"
                    android:textSize="@dimen/text_14" />

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginLeft="@dimen/size_10"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/text_director"
                        android:textColor="@color/gray_c3c3c3"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/item_film__director"
                        style="@style/WrapWrap"
                        android:textColor="@color/gray_929292"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginLeft="@dimen/size_10"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/text_star"
                        android:textColor="@color/gray_c3c3c3"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/item_film__star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/gray_929292"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginLeft="@dimen/size_10"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/text_showtime"
                        android:textColor="@color/gray_c3c3c3"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/item_film__showtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_929292"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>

            <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                style="@style/WrapWrap"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/bg_shadow"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <TextView
                    android:id="@+id/item_film__buy_ticket"
                    android:layout_width="@dimen/size_60"
                    android:layout_height="@dimen/size_30"
                    android:background="@drawable/radius_orange_4"
                    android:gravity="center"
                    android:text="@string/text_buy_ticket"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14" />
            </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

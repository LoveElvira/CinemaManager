<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_setting__layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_12">

        <ImageView
            android:id="@+id/item_setting__image"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_marginRight="@dimen/size_10"
            android:visibility="gone" />


        <TextView
            android:id="@+id/item_setting__title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_message"
            android:textColor="@color/black_666666"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/item_setting__message_num"
            android:layout_width="@dimen/size_15"
            android:layout_height="@dimen/size_15"
            android:layout_marginLeft="@dimen/size_5"
            android:background="@drawable/circle_red"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_8"
            android:visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:src="@mipmap/right_arrow"
            android:tint="@color/gray_b2b2b2" />

    </LinearLayout>

    <View
        android:id="@+id/item_setting__line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/bg_gray" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_10"
    android:visibility="gone">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付金额"
        android:textColor="@color/black_alpha1"
        android:textSize="@dimen/text_12" />

    <TextView
        android:id="@+id/content_pay_select__confirm_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/magin_5"
        android:layout_marginRight="@dimen/magin_5"
        android:text="120"
        android:textColor="@color/red"
        android:textSize="@dimen/text_18" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="元"
        android:textColor="@color/black_alpha1"
        android:textSize="@dimen/text_12" />

    <com.yyjlr.tickets.viewutils.MaterialRippleLayout
        style="@style/WrapMatch"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <TextView
            android:id="@+id/content_pay_select__confirm_pay"
            style="@style/MatchMatch"
            android:background="@color/btn_orange"
            android:gravity="center"
            android:text="确认支付"
            android:paddingLeft="@dimen/padding_20"
            android:paddingRight="@dimen/padding_20"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />
    </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
</LinearLayout>
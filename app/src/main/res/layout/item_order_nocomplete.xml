<?xml version="1.0" encoding="utf-8"?>
<com.yyjlr.tickets.viewutils.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_order_nocomplete__button_view"
    style="@style/MatchWrap">

    <RelativeLayout style="@style/MatchMatch">

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/MatchWrap"
            android:layout_toRightOf="@+id/item_order_nocomplete__rl_layout"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <TextView
                android:id="@+id/item_order__delete"
                android:layout_width="@dimen/size_80"
                android:layout_height="match_parent"
                android:background="@color/red_de2500"
                android:gravity="center"
                android:text="@string/text_delete"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

        <RelativeLayout
            android:id="@+id/item_order_nocomplete__rl_layout"
            style="@style/MatchWrap">

            <!--<com.yyjlr.tickets.viewutils.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
            <!--style="@style/MatchWrap"-->
            <!--app:mrl_rippleAlpha="0.2"-->
            <!--app:mrl_rippleColor="@color/bg_shadow"-->
            <!--app:mrl_rippleHover="true"-->
            <!--app:mrl_rippleOverlay="true">-->

            <LinearLayout
                android:id="@+id/item_order_nocomplete__ll_layout"
                style="@style/MatchWrap"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/size_10"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_20">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/MatchWrap"
                        android:layout_marginBottom="@dimen/size_10"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/WrapWrap"
                            android:text="@string/text_order_num"
                            android:textColor="@color/gray_c3c3c3"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:id="@+id/item_order_nocomplete__order_num"
                            style="@style/WrapWrap"
                            android:textColor="@color/black_363636"
                            android:textSize="@dimen/text_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_order_nocomplete__order_film_layout"
                        style="@style/MatchWrap"
                        android:layout_marginBottom="@dimen/size_10"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/WrapWrap"
                            android:text="@string/text_order_film"
                            android:textColor="@color/gray_c3c3c3"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:id="@+id/item_order_nocomplete__order_film"
                            style="@style/WrapWrap"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/black_363636"
                            android:textSize="@dimen/text_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/item_order_nocomplete__package_layout"
                        style="@style/MatchWrap"
                        android:layout_marginBottom="@dimen/size_10"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/WrapWrap"
                            android:text="@string/text_order_package"
                            android:textColor="@color/gray_c3c3c3"
                            android:textSize="@dimen/text_12"
                            android:id="@+id/textView2" />

                        <TextView
                            android:id="@+id/item_order_nocomplete__package"
                            style="@style/WrapWrap"
                            android:textColor="@color/black_363636"
                            android:textSize="@dimen/text_12" />
                    </LinearLayout>
                </LinearLayout>

                <!--<com.yyjlr.tickets.viewutils.MaterialRippleLayout-->
                <!--style="@style/WrapWrap"-->
                <!--android:layout_marginRight="@dimen/size_10"-->
                <!--app:mrl_rippleAlpha="0.2"-->
                <!--app:mrl_rippleColor="@color/bg_shadow"-->
                <!--app:mrl_rippleHover="true"-->
                <!--app:mrl_rippleOverlay="true">-->

                <TextView
                    android:id="@+id/item_order_nocomplete__cancel"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@drawable/radius_gray_4"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13" />
                <!--</com.yyjlr.tickets.viewutils.MaterialRippleLayout>-->

                <!--<com.yyjlr.tickets.viewutils.MaterialRippleLayout-->
                <!--style="@style/WrapWrap"-->
                <!--app:mrl_rippleAlpha="0.2"-->
                <!--app:mrl_rippleColor="@color/bg_shadow"-->
                <!--app:mrl_rippleHover="true"-->
                <!--app:mrl_rippleOverlay="true">-->

                <TextView
                    android:id="@+id/item_order_nocomplete__pay"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_30"
                    android:background="@drawable/radius_orange_4"
                    android:gravity="center"
                    android:text="@string/text_order_pay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13" />
                <!--</com.yyjlr.tickets.viewutils.MaterialRippleLayout>-->

                <TextView
                    android:id="@+id/item_order_nocomplete__lost"
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/size_20"
                    android:gravity="center"
                    android:text="@string/text_order_lose"
                    android:textColor="@color/gray_929292"
                    android:textSize="@dimen/text_16"
                    android:visibility="gone" />
            </LinearLayout>
            <!--</com.yyjlr.tickets.viewutils.MaterialRippleLayout>-->
        </RelativeLayout>
    </RelativeLayout>
</com.yyjlr.tickets.viewutils.SlidingButtonView>
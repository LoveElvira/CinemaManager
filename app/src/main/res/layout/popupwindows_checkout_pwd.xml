<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/size_20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10"
            android:gravity="center"
            android:text="请输入密码"
            android:textColor="@color/black_363636"
            android:textSize="@dimen/text_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:layout_margin="@dimen/size_10"
            android:background="@color/gray_e7e7e7"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/popup_pwd__pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:textColorHint="@color/gray_a1a1a1"
                android:textSize="@dimen/text_13" />

            <LinearLayout
                android:layout_width="@dimen/size_30"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/size_15"
                    android:layout_height="@dimen/size_15"
                    android:src="@mipmap/cancel_search"
                    android:tint="@color/white" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/popup_pwd__errow_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_5"
            android:gravity="center"
            android:text="支付密码错误请重新输入"
            android:textColor="@color/red_de2500"
            android:textSize="@dimen/text_13"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/popup_pwd__cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_10"
                android:layout_weight="1"
                android:background="@drawable/radius_gray_4"
                android:gravity="center"
                android:paddingBottom="@dimen/size_12"
                android:paddingTop="@dimen/size_12"
                android:text="@string/text_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15" />


            <TextView
                android:id="@+id/popup_pwd__confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_weight="1"
                android:background="@drawable/radius_orange_4"
                android:gravity="center"
                android:paddingBottom="@dimen/size_12"
                android:paddingTop="@dimen/size_12"
                android:text="@string/text_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
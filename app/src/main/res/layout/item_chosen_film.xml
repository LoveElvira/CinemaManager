<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/magin_10"
    android:layout_marginRight="@dimen/magin_10"
    android:layout_weight="3"
    android:background="@drawable/home01_bg_card"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_chosen__image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@mipmap/image_1"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="false"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundedCornerRadius="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">

        <TextView
            android:id="@+id/item_chosen__name"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/magin_10"
            android:textColor="@color/black_alpha"
            android:textSize="@dimen/text_15" />

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/magin_10"
            android:orientation="horizontal">

            <TextView
                style="@style/WrapWrap"
                android:text="@string/text_time"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/item_chosen__showtime"
                style="@style/WrapWrap"
                android:textColor="@color/black_alpha"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/magin_10"
            android:orientation="horizontal">

            <TextView
                style="@style/WrapWrap"
                android:text="@string/text_price"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/item_chosen__price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_alpha"
                android:textSize="@dimen/text_14" />
        </LinearLayout>


        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/magin_40"
            android:layout_marginRight="@dimen/magin_40"
            android:layout_marginTop="@dimen/magin_10"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <TextView
                android:id="@+id/item_chosen__enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn_blue"
                android:gravity="center"
                android:text="@string/text_enter"
                android:paddingTop="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_10"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
    </LinearLayout>

</LinearLayout>

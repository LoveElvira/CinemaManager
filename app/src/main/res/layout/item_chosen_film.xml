<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:id="@+id/item_chosen__parent"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_20"
    android:layout_marginLeft="@dimen/size_20"
    android:layout_marginRight="@dimen/size_20"
    android:layout_marginBottom="@dimen/size_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_chosen__image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/size_10">

                <TextView
                    android:id="@+id/item_chosen__name"
                    style="@style/WrapWrap"
                    android:textColor="@color/black_363636"
                    android:textSize="@dimen/text_14" />

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginLeft="@dimen/size_10"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/text_time"
                        android:textColor="@color/gray_c7c7c7"
                        android:textSize="@dimen/text_12"/>

                    <TextView
                        android:id="@+id/item_chosen__showtime"
                        style="@style/WrapWrap"
                        android:textColor="@color/black_363636"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginLeft="@dimen/size_10"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/text_price"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/gray_c7c7c7" />

                    <TextView
                        android:id="@+id/item_chosen__price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_363636"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>


                <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                    style="@style/MatchWrap"
                    android:layout_marginLeft="@dimen/size_40"
                    android:layout_marginRight="@dimen/size_40"
                    android:layout_marginTop="@dimen/size_15"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="@color/bg_shadow"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">

                    <TextView
                        android:id="@+id/item_chosen__enter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/radius_blue_4"
                        android:gravity="center"
                        android:text="@string/text_enter"
                        android:paddingTop="@dimen/size_12"
                        android:paddingBottom="@dimen/size_12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_15" />
                </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/item_chosen__white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

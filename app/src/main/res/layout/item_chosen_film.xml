<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="20dp"
    android:layout_marginLeft="@dimen/magin_20"
    android:layout_marginRight="@dimen/magin_20"
    android:layout_marginBottom="@dimen/magin_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_chosen__image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <TextView
                android:id="@+id/item_chosen__name"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/magin_10"
                android:textColor="@color/black_alpha"
                android:textSize="@dimen/text_15" />

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/magin_10"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/text_time"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/item_chosen__showtime"
                    style="@style/WrapWrap"
                    android:textColor="@color/black_alpha"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

            <LinearLayout
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/magin_10"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/text_price"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/item_chosen__price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_alpha"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>


            <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/magin_40"
                android:layout_marginRight="@dimen/magin_40"
                android:layout_marginTop="@dimen/magin_10"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/bg_shadow"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <TextView
                    android:id="@+id/item_chosen__enter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_blue"
                    android:gravity="center"
                    android:text="@string/text_enter"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15" />
            </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

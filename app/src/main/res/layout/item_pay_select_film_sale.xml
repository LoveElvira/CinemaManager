<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_pay_select_filmorsale__name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1.5"
            android:textColor="@color/black_363636"
            android:textSize="@dimen/text_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_original_price"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_12"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_pay_select_filmorsale__original_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:textColor="@color/black_363636"
            android:textSize="@dimen/text_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_discount_price"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_pay_select_filmorsale__discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40元"
            android:textColor="@color/black_363636"
            android:textSize="@dimen/text_12"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小计："
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_12"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_pay_select_filmorsale__total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:layout_weight="1"
            android:textColor="@color/black_363636"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

    <View
        android:id="@+id/item_pay_select_filmorsale__line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/size_5"
        android:layout_marginRight="@dimen/size_5"
        android:background="@color/gray_e4e4e4"
        android:layout_marginBottom="@dimen/size_5"
        android:visibility="gone"/>

</LinearLayout>
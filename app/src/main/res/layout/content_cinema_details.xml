<?xml version="1.0" encoding="utf-8"?>
<com.yyjlr.tickets.viewutils.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/bg_gray"
    android:paddingBottom="@dimen/padding_20"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yyjlr.tickets.activity.CinemaDetailsActivity"
    tools:showIn="@layout/activity_cinema_details">

    <LinearLayout
        style="@style/MatchMatch"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_200"
            android:background="@mipmap/cinema">

            <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                style="@style/WrapWrap"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/bg_shadow"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <ImageView
                    android:id="@+id/content_cinema__left"
                    style="@style/WrapWrap"
                    android:background="@mipmap/left_arrow"
                    android:fitsSystemWindows="true" />
            </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

            <LinearLayout
                android:layout_width="@dimen/height_150"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/gray_alpha1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/content_cinema__name"
                    style="@style/WrapWrap"
                    android:padding="@dimen/padding_5"
                    android:text="@string/text_cinema_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/content_cinema__introduction"
                    style="@style/WrapWrap"
                    android:padding="@dimen/padding_5"
                    android:text="@string/text_cinema_introduction"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/content_cinema__listview"
                style="@style/WrapWrap" />
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <ImageView
                style="@style/WrapWrap"
                android:layout_marginRight="@dimen/magin_10"
                android:background="@mipmap/time" />

            <TextView
                style="@style/WrapWrap"
                android:text="营业时间："
                android:textColor="@color/black_alpha"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/content_cinema__start_and_end_time"
                style="@style/WrapWrap"
                android:text="06:00~23:59"
                android:textColor="@color/black_alpha"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

        <View
            style="@style/MatchOne"
            android:background="@color/gray" />

        <LinearLayout
            style="@style/MatchWrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <ImageView
                style="@style/WrapWrap"
                android:layout_marginRight="@dimen/magin_10"
                android:background="@mipmap/phone" />

            <TextView
                style="@style/WrapWrap"
                android:text="热线电话："
                android:textColor="@color/black_alpha"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/content_cinema__phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8888888888"
                android:textColor="@color/black_alpha"
                android:textSize="@dimen/text_12" />

            <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                style="@style/WrapWrap"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/bg_shadow"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                android:layout_marginRight="@dimen/magin_10">
            <ImageView
                android:id="@+id/content_cinema__tel_phone"
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:background="@mipmap/tel_phone" />
            </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/content_cinema__address_layout"
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/magin_10"
            android:orientation="vertical">

            <View
                style="@style/MatchOne"
                android:background="@color/gray" />

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_10">

                <ImageView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/magin_10"
                    android:background="@mipmap/address" />

                <TextView
                    android:id="@+id/content_cinema__address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_cinema_address"
                    android:textColor="@color/black_alpha"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/content_cinema__subway_layout"
            style="@style/MatchWrap"
            android:orientation="vertical">

            <View
                style="@style/MatchOne"
                android:background="@color/gray" />

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_10">

                <ImageView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/magin_10"
                    android:background="@mipmap/subway" />

                <TextView
                    android:id="@+id/content_cinema__subway"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_cinema_subway"
                    android:textColor="@color/black_alpha"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_cinema__transit_layout"
            style="@style/MatchWrap"
            android:orientation="vertical">

            <View
                style="@style/MatchOne"
                android:background="@color/gray" />

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_10">

                <ImageView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/magin_10"
                    android:background="@mipmap/transit" />

                <TextView
                    android:id="@+id/content_cinema__transit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_cinema_transit"
                    android:textColor="@color/black_alpha"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_cinema__park_layout"
            style="@style/MatchWrap"
            android:orientation="vertical">

            <View
                style="@style/MatchOne"
                android:background="@color/gray" />

            <LinearLayout
                style="@style/MatchWrap"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/padding_10">

                <ImageView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/magin_10"
                    android:background="@mipmap/park" />

                <TextView
                    android:id="@+id/content_cinema__park"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_cinema_park"
                    android:textColor="@color/black_alpha"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/magin_10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/content_cinema__popcorn_layout"
                style="@style/MatchWrap"
                android:orientation="vertical">

                <View
                    style="@style/MatchOne"
                    android:background="@color/gray" />

                <LinearLayout
                    style="@style/MatchWrap"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_10">

                    <ImageView
                        style="@style/WrapWrap"
                        android:layout_marginRight="@dimen/magin_10"
                        android:background="@mipmap/popcorn" />

                    <TextView
                        android:id="@+id/content_cinema__popcorn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_cinema_popcorn"
                        android:textColor="@color/black_alpha"
                        android:textSize="@dimen/text_12" />

                    <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                        style="@style/WrapWrap"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleColor="@color/bg_shadow"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="true"
                        android:layout_marginRight="@dimen/magin_10">

                        <ImageView
                            android:id="@+id/content_cinema_add_shopping"
                            style="@style/WrapWrap"
                            android:background="@mipmap/shopping_cart" />
                    </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/content_cinema__children_layout"
                style="@style/MatchWrap"
                android:orientation="vertical">

                <View
                    style="@style/MatchOne"
                    android:background="@color/gray" />

                <LinearLayout
                    style="@style/MatchWrap"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_10">

                    <ImageView
                        style="@style/WrapWrap"
                        android:layout_marginRight="@dimen/magin_10"
                        android:background="@mipmap/children" />

                    <TextView
                        android:id="@+id/content_cinema__children"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_cinema_children"
                        android:textColor="@color/black_alpha"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/content_cinema__glasses_layout"
                style="@style/MatchWrap"
                android:orientation="vertical">

                <View
                    style="@style/MatchOne"
                    android:background="@color/gray" />

                <LinearLayout
                    style="@style/MatchWrap"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_10">

                    <ImageView
                        style="@style/WrapWrap"
                        android:layout_marginRight="@dimen/magin_10"
                        android:background="@mipmap/glasses" />

                    <TextView
                        android:id="@+id/content_cinema__glasses"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_cinema_glasses"
                        android:textColor="@color/black_alpha"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/content_cinema__lovers_layout"
                style="@style/MatchWrap"
                android:orientation="vertical">

                <View
                    style="@style/MatchOne"
                    android:background="@color/gray" />

                <LinearLayout
                    style="@style/MatchWrap"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_10">

                    <ImageView
                        style="@style/WrapWrap"
                        android:layout_marginRight="@dimen/magin_10"
                        android:background="@mipmap/lovers" />

                    <TextView
                        android:id="@+id/content_cinema__lovers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/text_cinema_lover"
                        android:textColor="@color/black_alpha"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.yyjlr.tickets.viewutils.ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_event__cardview"
    style="@style/MatchMatch"
    android:layout_margin="@dimen/size_20"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_5">

    <LinearLayout
        style="@style/MatchWrap"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/size_20">

        <TextView
            android:id="@+id/content_event__collect_num"
            style="@style/MatchWrap"
            android:gravity="center"
            android:text="0位用户收藏了这个信息"
            android:textColor="@color/gray_c3c3c3" />

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size_10"
            android:paddingLeft="@dimen/size_20"
            android:paddingRight="@dimen/size_20"
            android:paddingTop="@dimen/size_20">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/content_event__listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/line_dash" />

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size_20"
            android:paddingLeft="@dimen/size_20"
            android:paddingRight="@dimen/size_20"
            android:paddingTop="@dimen/size_10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginBottom="@dimen/size_5"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/WrapWrap"
                        android:background="@mipmap/calendar" />

                    <TextView
                        android:id="@+id/content_event__time"
                        style="@style/WrapWrap"
                        android:layout_marginLeft="@dimen/size_5"
                        android:textColor="@color/black_363636"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/WrapWrap"
                        android:background="@mipmap/people" />

                    <TextView
                        android:id="@+id/content_event__join_number"
                        style="@style/WrapWrap"
                        android:layout_marginLeft="@dimen/size_5"
                        android:textColor="@color/black_363636"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/MatchWrap"
                    android:layout_marginBottom="@dimen/size_5"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/WrapWrap"
                        android:background="@mipmap/address_yellow" />

                    <TextView
                        android:id="@+id/content_event__address"
                        style="@style/WrapWrap"
                        android:layout_marginLeft="@dimen/size_5"
                        android:textColor="@color/black_363636"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/WrapWrap"
                        android:background="@mipmap/money" />

                    <TextView
                        android:id="@+id/content_event__price"
                        style="@style/WrapWrap"
                        android:layout_marginLeft="@dimen/size_5"
                        android:textColor="@color/black_363636"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/content_event__description"
            style="@style/MatchWrap"
            android:background="@color/bg_gray"
            android:lineSpacingMultiplier="1.5"
            android:paddingBottom="@dimen/size_20"
            android:paddingLeft="@dimen/size_20"
            android:paddingRight="@dimen/size_20"
            android:paddingTop="@dimen/size_12"
            android:textColor="@color/black_363636"
            android:textSize="@dimen/text_12" />

    </LinearLayout>
</android.support.v7.widget.CardView>
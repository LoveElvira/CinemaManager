<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch"
    android:id="@+id/content_event__cardview"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/magin_5"
    android:layout_margin="@dimen/magin_20">

    <LinearLayout
        style="@style/MatchWrap"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_10">

        <TextView
            style="@style/MatchWrap"
            android:gravity="center"
            android:text="123位用户收藏了这个信息"
            android:textColor="@color/gray" />

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_20"
            android:paddingRight="@dimen/padding_20"
            android:paddingTop="@dimen/padding_10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.yyjlr.tickets.viewutils.CircleImageView
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/height_50"
                    android:src="@mipmap/image_1" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/magin_10"
                    android:text="小蛮缠"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.yyjlr.tickets.viewutils.CircleImageView
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/height_50"
                    android:src="@mipmap/image_1" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/magin_10"
                    android:text="小蛮缠"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.yyjlr.tickets.viewutils.CircleImageView
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/height_50"
                    android:src="@mipmap/image_1" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/magin_10"
                    android:text="小蛮缠"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.yyjlr.tickets.viewutils.CircleImageView
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/height_50"
                    android:src="@mipmap/image_1" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/magin_10"
                    android:text="小蛮缠"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/WrapWrap"
                    android:background="@drawable/circle_orange"
                    android:gravity="center"
                    android:text="+99"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_20" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line_dash"
            android:layout_marginTop="@dimen/magin_10"/>

        <LinearLayout
            style="@style/MatchWrap"
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_20"
            android:paddingRight="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_20">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/MatchWrap"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/magin_5">

                    <ImageView
                        style="@style/WrapWrap"
                        android:background="@mipmap/calendar" />

                    <TextView
                        style="@style/WrapWrap"
                        android:layout_marginLeft="@dimen/magin_5"
                        android:text="2016.12.31 19:30"
                        android:textColor="@color/black_alpha1"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/WrapWrap"
                        android:background="@mipmap/people" />

                    <TextView
                        style="@style/WrapWrap"
                        android:layout_marginLeft="@dimen/magin_5"
                        android:text="100"
                        android:textColor="@color/black_alpha1"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/MatchWrap"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/magin_5">

                    <ImageView
                        style="@style/WrapWrap"
                        android:background="@mipmap/address_yellow" />

                    <TextView
                        style="@style/WrapWrap"
                        android:layout_marginLeft="@dimen/magin_5"
                        android:text="SFC上影（世博店）"
                        android:textColor="@color/black_alpha1"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

                <LinearLayout
                    style="@style/MatchWrap"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/WrapWrap"
                        android:background="@mipmap/money" />

                    <TextView
                        style="@style/WrapWrap"
                        android:layout_marginLeft="@dimen/magin_5"
                        android:text="¥80"
                        android:textColor="@color/black_alpha1"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/MatchWrap"
            android:paddingBottom="@dimen/padding_20"
            android:paddingLeft="@dimen/padding_20"
            android:paddingRight="@dimen/padding_20"
            android:paddingTop="@dimen/padding_10"
            android:background="@color/bg_gray"
            android:textSize="@dimen/text_12"
            android:lineSpacingMultiplier="1.5"
            android:text="@string/text_film_details"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
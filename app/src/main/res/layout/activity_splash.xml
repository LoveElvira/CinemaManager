<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:orientation="vertical"
    tools:context=".activity.SplashActivity">

    <View
        android:id="@+id/splash__view"
        android:layout_width="1px"
        android:layout_height="1px" />

    <RelativeLayout style="@style/MatchMatch">

        <com.yyjlr.tickets.viewutils.LockableViewPager
            android:id="@+id/splsh__viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/splsh__dot_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black_alpha_3"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/size_10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_5"
            android:layout_marginTop="@dimen/size_25"
            android:orientation="vertical">

            <com.yyjlr.tickets.viewutils.CircleTextProgressbar
                android:id="@+id/splash__jump"
                style="@style/WrapWrap"
                android:gravity="center"
                android:padding="@dimen/size_7"
                android:text="@string/text_jump"
                android:textColor="@color/white"
                android:textSize="@dimen/text_13" />
        </LinearLayout>

        <ImageView
            android:id="@+id/splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/splash" />

        <TextView
            android:id="@+id/splash__enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_50"
            android:layout_marginLeft="@dimen/size_100"
            android:layout_marginRight="@dimen/size_100"
            android:background="@drawable/radius_orange_10"
            android:gravity="center"
            android:padding="@dimen/size_12"
            android:text="立即体验"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/splash__enter_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_50"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size_80"
            android:src="@mipmap/enter_main"
            android:visibility="gone" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:orientation="vertical"
    tools:context=".activity.SplashActivity">

    <View
        android:id="@+id/splash__view"
        android:layout_width="1px"
        android:layout_height="1px" />

    <RelativeLayout style="@style/MatchMatch">

        <com.yyjlr.tickets.viewutils.LockableViewPager
            android:id="@+id/splsh__viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/splsh__dot_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black_alpha_3"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/size_10" />

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/WrapWrap"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/size_5"
            android:layout_marginTop="@dimen/size_25"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <TextView
                android:id="@+id/splash__jump"
                style="@style/MatchMatch"
                android:background="@drawable/circle_border"
                android:gravity="center"
                android:text="@string/text_jump"
                android:textColor="@color/white" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

        <ImageView
            android:id="@+id/splash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/splash" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
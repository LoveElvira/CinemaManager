<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yyjlr.tickets.activity.setting.SettingVipActivity"
    tools:showIn="@layout/activity_mysetting_vip">

    <RelativeLayout
        android:id="@+id/content_setting_vip__no_card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            style="@style/WrapWrap"
            android:src="@mipmap/no_vip_card" />


        <TextView
            android:id="@+id/content_setting_vip__bound"
            style="@style/MatchWrap"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_30"
            android:layout_marginRight="@dimen/size_30"
            android:background="@drawable/radius_blue_4"
            android:gravity="center"
            android:padding="@dimen/size_12"
            android:text="@string/text_bound_vip"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content_setting_vip__layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/size_5"
        android:visibility="gone" />

    <!--<include layout="@layout/content_mysetting_bound_vip" />-->

</LinearLayout>
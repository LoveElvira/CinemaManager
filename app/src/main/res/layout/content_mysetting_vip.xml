<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yyjlr.tickets.activity.setting.SettingVipActivity"
    tools:showIn="@layout/activity_mysetting_vip">

    <RelativeLayout
        android:id="@+id/content_setting_vip__no_card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/content_setting_vip__no_card"
            style="@style/WrapWrap"
            android:src="@mipmap/no_vip_card"/>

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/MatchWrap"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/magin_10"
            android:layout_marginLeft="@dimen/magin_30"
            android:layout_marginRight="@dimen/magin_30"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <TextView
                android:id="@+id/content_setting_vip__bound"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/selector_btn_blue"
                android:gravity="center"
                android:text="绑定会员卡"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
    </RelativeLayout>

    <include layout="@layout/content_mysetting_bound_vip"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginBottom="@dimen/size_50"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/content_select_cinema__cancel"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:padding="@dimen/size_15"
            android:src="@mipmap/seat_cancel"
            android:tint="@color/white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10"
                android:text="选择影院"
                android:textColor="@color/black_363636" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_dcdcdc" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/content_select_cinema__listview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_260"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/content_select_cinema__confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginRight="@dimen/size_30"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/radius_blue_4"
                android:gravity="center"
                android:padding="@dimen/size_15"
                android:text="@string/text_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
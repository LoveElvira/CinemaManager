<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50"
    android:background="@color/gray_f7f7f7"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/bottom_button__chosen"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/bottom_button__chosen_image"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:src="@mipmap/jingxuan_select" />

        <TextView
            android:id="@+id/bottom_button__chosen_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:text="@string/text_home"
            android:textColor="@color/white"
            android:textSize="@dimen/text_10" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_button__film"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_button__film_image"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:src="@mipmap/bottom_film_select" />

        <TextView
            android:id="@+id/bottom_button__film_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:text="@string/text_film"
            android:textColor="@color/blue_2AABE2"
            android:textSize="@dimen/text_10" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_button__grab"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_button__grab_image"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:src="@mipmap/bottom_event_default" />

        <TextView
            android:id="@+id/bottom_button__grab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:text="@string/text_grab"
            android:textColor="@color/black_343434"
            android:textSize="@dimen/text_10" />

    </LinearLayout>

    <!--<com.yyjlr.tickets.viewutils.MaterialRippleLayout-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_weight="1"-->
    <!--app:mrl_rippleAlpha="0.2"-->
    <!--app:mrl_rippleColor="@color/bg_shadow"-->
    <!--app:mrl_rippleHover="true"-->
    <!--app:mrl_rippleOverlay="true">-->

    <LinearLayout
        android:id="@+id/bottom_button__sale"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_button__sale_image"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:src="@mipmap/bottom_mall_default" />

        <TextView
            android:id="@+id/bottom_button__sale_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:text="@string/text_sale"
            android:textColor="@color/black_343434"
            android:textSize="@dimen/text_10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_button__my"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_button__my_image"
            android:layout_width="@dimen/size_25"
            android:layout_height="@dimen/size_25"
            android:src="@mipmap/bottom_mine_default" />

        <TextView
            android:id="@+id/bottom_button__my_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:text="@string/text_my"
            android:textColor="@color/black_343434"
            android:textSize="@dimen/text_10" />

    </LinearLayout>
</LinearLayout>
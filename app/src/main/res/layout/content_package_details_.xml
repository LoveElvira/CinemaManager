<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_event__cardview"
    style="@style/MatchWrap"
    android:layout_margin="@dimen/size_20"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_3">

    <LinearLayout
        style="@style/MatchWrap"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_30"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_20"
        android:paddingTop="@dimen/size_30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginBottom="@dimen/size_20"
                    android:text="某某某大礼包"
                    android:textColor="@color/black_363636"
                    android:textSize="@dimen/text_15" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginBottom="@dimen/size_10"
                    android:lineSpacingMultiplier="1.3"
                    android:text="《某某某》影票 ×2 \n某某某爆米花(500g) ×2\n可乐(500g) ×2"
                    android:textColor="@color/black_363636"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/bird" />

        </LinearLayout>

        <TextView
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/size_20"
            android:lineSpacingMultiplier="1.5"
            android:text="套餐说明套餐说明套餐说明套餐说明套餐说明套餐说明套餐说明套餐说明套餐说明套餐说明套餐说明套餐说明套餐说明"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_13" />

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/size_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content_package_details__original_price"
                style="@style/WrapWrap"
                android:text="原价：36元"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_12" />


            <LinearLayout
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/size_10"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:text="套餐价："
                    android:textColor="@color/gray_929292"
                    android:textSize="@dimen/text_12" />

                <TextView
                    android:id="@+id/content_package_details__package_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5"
                    android:layout_marginRight="@dimen/size_5"
                    android:text="88"
                    android:textColor="@color/red_de2500"
                    android:textSize="@dimen/text_18" />

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/text_money_unit"
                    android:textColor="@color/gray_929292"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
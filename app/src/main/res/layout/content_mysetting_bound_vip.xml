<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:id="@+id/content_setting_vip__bound_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:visibility="gone"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yyjlr.tickets.activity.VipBoundActivity"
    tools:showIn="@layout/activity_setting_unbound_vip">

    <LinearLayout
        style="@style/MatchMatch"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            style="@style/MatchWrap"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                style="@style/WrapWrap"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="@string/text_card_num"
                android:textSize="@dimen/text_14" />

            <EditText
                android:id="@+id/content_setting_vip__card"
                style="@style/AutoMatch"
                android:layout_marginLeft="@dimen/magin_5"
                android:background="@null"
                android:gravity="center|right"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <View
            style="@style/MatchOne"
            android:background="@color/gray_alpha" />

        <LinearLayout
            style="@style/MatchWrap"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                android:id="@+id/content_setting_vip__password"
                style="@style/WrapWrap"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="@string/text_card_money"
                android:textSize="@dimen/text_14" />

            <EditText
                android:id="@+id/content_setting_vip__money"
                style="@style/AutoMatch"
                android:layout_marginLeft="@dimen/magin_5"
                android:background="@null"
                android:gravity="center|right"
                android:maxLength="11"
                android:maxLines="1"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/content_setting_vip__tip"
            style="@style/WrapWrap"
            android:layout_marginTop="@dimen/magin_20"
            android:text="忘记密码请联系影院"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_13" />

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/MatchWrap"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true"
            android:layout_margin="@dimen/magin_30">

            <TextView
                android:id="@+id/content_setting_vip__unbound_or_bound"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/selector_btn_blue"
                android:gravity="center"
                android:text="确认绑定"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/WrapWrap"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_80"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_20"
        android:paddingRight="@dimen/padding_20">

        <ImageView
            android:id="@+id/item_schedule__sun_or_moon"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/magin_10"
            android:layout_marginTop="-5dp"
            android:background="@mipmap/sun" />

        <LinearLayout
            style="@style/WrapMatch"
            android:gravity="left|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_schedule__start_time"
                style="@style/WrapWrap"
                android:text="07:00"
                android:textColor="@color/black_alpha"
                android:textSize="@dimen/text_18" />

            <TextView
                android:id="@+id/item_schedule__end_time"
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/magin_5"
                android:text="09:00散场"
                android:textColor="@color/gray_alpha1"
                android:textSize="@dimen/text_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                style="@style/WrapWrap"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_schedule__language"
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/magin_5"
                    android:text="英语"
                    android:textColor="@color/gray_alpha1"
                    android:textSize="@dimen/text_13" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/height_5"
                    android:layout_marginRight="@dimen/magin_5"
                    android:background="@color/gray_alpha1" />

                <TextView
                    android:id="@+id/item_schedule__type"
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/magin_5"
                    android:text="3D"
                    android:textColor="@color/gray_alpha1"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/magin_5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_schedule__hall"
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/magin_5"
                    android:text="5号厅"
                    android:textColor="@color/gray_alpha1"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/item_schedule__hall_type"
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/magin_5"
                    android:background="@drawable/bg_green"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingRight="@dimen/padding_5"
                    android:text="巨幕厅"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_8" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:orientation="vertical">

            <LinearLayout
                style="@style/WrapWrap"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/magin_5"
                    android:text="原     价"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_9" />

                <TextView
                    android:id="@+id/item_schedule__original_price"
                    style="@style/WrapWrap"
                    android:text="¥99"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_9" />
            </LinearLayout>

            <LinearLayout
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/magin_5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/magin_5"
                    android:text="APP价"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/item_schedule__app_price"
                    style="@style/WrapWrap"
                    android:text="¥99"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

        </LinearLayout>

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/WrapWrap"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <TextView
                android:id="@+id/item_schedule__buy_ticket"
                android:layout_width="@dimen/height_50"
                android:layout_height="@dimen/height_30"
                android:background="@drawable/selector_btn_orange"
                android:gravity="center"
                android:text="购票"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
    </LinearLayout>

    <View
        style="@style/MatchOne"
        android:background="@color/gray" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/WrapWrap"
    android:orientation="vertical">

    <!--<com.yyjlr.tickets.viewutils.MaterialRippleLayout-->
    <!--style="@style/MatchWrap"-->
    <!--app:mrl_rippleAlpha="0.2"-->
    <!--app:mrl_rippleColor="@color/bg_shadow"-->
    <!--app:mrl_rippleHover="true"-->
    <!--app:mrl_rippleOverlay="true">-->

    <LinearLayout
        android:id="@+id/item_schedule__parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_80"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_10"
        android:paddingRight="@dimen/size_10">

        <ImageView
            android:id="@+id/item_schedule__sun_or_moon"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginTop="-5dp" />

        <LinearLayout
            style="@style/WrapMatch"
            android:gravity="left|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_schedule__start_time"
                style="@style/WrapWrap"
                android:textColor="@color/black_2c2c2c"
                android:textSize="@dimen/text_20" />

            <TextView
                android:id="@+id/item_schedule__end_time"
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/size_5"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                style="@style/WrapWrap"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_schedule__language"
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/size_10"
                    android:textColor="@color/gray_929292"
                    android:textSize="@dimen/text_14" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/size_5"
                    android:layout_marginRight="@dimen/size_10"
                    android:background="@color/gray_929292" />

                <TextView
                    android:id="@+id/item_schedule__type"
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/size_5"
                    android:textColor="@color/gray_929292"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>

            <LinearLayout
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/size_5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_schedule__hall"
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/size_5"
                    android:maxEms="5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/gray_929292"
                    android:textSize="@dimen/text_11" />

                <TextView
                    android:id="@+id/item_schedule__hall_type"
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/size_5"
                    android:background="@drawable/bg_green"
                    android:paddingBottom="1dp"
                    android:paddingLeft="@dimen/size_5"
                    android:paddingRight="@dimen/size_5"
                    android:maxEms="5"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:paddingTop="1dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_9" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:orientation="vertical">

            <LinearLayout
                style="@style/WrapWrap"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/size_5"
                    android:text="原   价"
                    android:textColor="@color/gray_c3c3c3"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/item_schedule__original_price"
                    style="@style/WrapWrap"
                    android:textColor="@color/gray_929292"
                    android:textSize="@dimen/text_11" />
            </LinearLayout>

            <LinearLayout
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/size_5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/size_5"
                    android:text="APP价"
                    android:textColor="@color/gray_c3c3c3"
                    android:textSize="@dimen/text_10" />

                <TextView
                    android:id="@+id/item_schedule__app_price"
                    style="@style/WrapWrap"
                    android:textColor="@color/red_de2500"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

        </LinearLayout>

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/WrapWrap"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <TextView
                android:id="@+id/item_schedule__buy_ticket"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_30"
                android:background="@drawable/radius_orange_4"
                android:gravity="center"
                android:text="@string/text_buy_ticket"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
    </LinearLayout>
    <!--</com.yyjlr.tickets.viewutils.MaterialRippleLayout>-->

    <View
        style="@style/MatchOne"
        android:background="@color/gray_e7e7e7" />
</LinearLayout>
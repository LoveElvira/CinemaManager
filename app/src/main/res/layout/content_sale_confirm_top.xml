<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_20"
    android:paddingLeft="@dimen/size_10"
    android:paddingRight="@dimen/size_10"
    android:paddingTop="@dimen/size_20">

    <TextView
        android:id="@+id/content_sale_confirm__package"
        style="@style/WrapWrap"
        android:text="套餐一"
        android:textColor="@color/black_363636"
        android:layout_marginBottom="@dimen/size_10"
        android:textSize="@dimen/text_15" />

    <TextView
        android:id="@+id/content_sale_confirm__package_content"
        style="@style/WrapWrap"
        android:text="中份爆米花1份+2杯可乐"
        android:textColor="@color/gray_929292"
        android:textSize="@dimen/text_12" />


    <TextView
        android:id="@+id/content_sale_confirm__package_date"
        style="@style/WrapWrap"
        android:text="2016-08-16~2016-08-20"
        android:layout_marginTop="@dimen/size_5"
        android:textColor="@color/gray_c3c3c3"
        android:textSize="@dimen/text_11" />


    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/size_7"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/content_sale_confirm__package_unit_price"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/size_10"
            android:text="单价：20元，共1份"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/content_sale_confirm__package__price"
            style="@style/MatchWrap"
            android:layout_marginRight="@dimen/size_10"
            android:gravity="right"
            android:text="¥20"
            android:textColor="@color/red_de2500"
            android:textSize="@dimen/text_16" />
    </LinearLayout>
</LinearLayout>
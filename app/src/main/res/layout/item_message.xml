    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_message__layout"
        style="@style/MatchWrap"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            style="@style/MatchWrap"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/size_10">

            <TextView
                android:id="@+id/item_message__title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black_363636"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/text_14"
                android:lineSpacingMultiplier="1.4"
                android:layout_marginRight="@dimen/size_10"/>

            <TextView
                android:id="@+id/item_message__no_read"
                style="@style/WrapWrap"
                android:text="æ–°"
                android:visibility="gone"
                android:textColor="@color/red_de2500"
                android:textSize="@dimen/text_12"
                android:layout_marginRight="@dimen/size_10"/>

            <TextView
                android:id="@+id/item_message__time"
                style="@style/WrapWrap"
                android:text="2016-08-08"
                android:textColor="@color/gray_c3c3c3"
                android:textSize="@dimen/text_12" />

            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>
        <View
            style="@style/MatchOne"
            android:background="@color/gray_f4f4f4" />
    </LinearLayout>

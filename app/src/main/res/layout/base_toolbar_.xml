        <!--app:mrl_rippleOverlay="true">-->

    <RelativeLayout
        android:layout_width="@dimen/size_50"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/base_toolbar__left_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/size_10"
            android:alpha="0"
            android:src="@drawable/circle_black" />
        <ImageView
            android:id="@+id/base_toolbar__left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/size_15"
            android:alpha="0"
            android:src="@mipmap/left_arrow" />
    </RelativeLayout>
    <!--</com.yyjlr.tickets.viewutils.MaterialRippleLayout>-->

    <TextView
        android:id="@+id/base_toolbar__text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_17" />

    <TextView
        android:id="@+id/base_toolbar__right_text"
        android:layout_width="@dimen/size_50"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_15"
        android:visibility="gone"/>


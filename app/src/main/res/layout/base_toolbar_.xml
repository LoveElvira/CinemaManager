        <!--app:mrl_rippleOverlay="true">-->

        <ImageView
            android:id="@+id/base_toolbar__right"
            android:layout_width="@dimen/size_50"
            android:layout_height="match_parent"
            android:alpha="0"
            android:padding="@dimen/size_12"
            android:src="@mipmap/enter_cinema" />

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yyjlr.tickets.activity.setting.RechargeActivity"
    tools:showIn="@layout/activity_recharge">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/content_recharge__listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_12">

        <ImageView
            android:layout_width="@dimen/size_10"
            android:layout_height="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:src="@mipmap/sale_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本次最多可充值1000000.00元。"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_3"
        android:paddingLeft="@dimen/size_12"
        android:paddingRight="@dimen/size_5"
        android:paddingTop="@dimen/size_3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:text="金额"
            android:textColor="@color/black_363636"
            android:textSize="@dimen/text_13" />

        <EditText
            android:id="@+id/content_recharge__price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="建议充值100以上金额"
            android:inputType="numberDecimal"
            android:textColorHint="@color/gray_c3c3c3"
            android:textSize="@dimen/text_13" />

        <LinearLayout
            android:id="@+id/content_recharge__delete"
            android:layout_width="@dimen/size_40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_10"
                android:layout_height="@dimen/size_10"
                android:src="@mipmap/select_error" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/content_recharge__confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:layout_marginTop="@dimen/size_100"
        android:background="@drawable/radius_orange_4"
        android:gravity="center"
        android:padding="@dimen/size_15"
        android:text="确认充值"
        android:textColor="@color/white" />

</LinearLayout>

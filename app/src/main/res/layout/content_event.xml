    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"></LinearLayout>

    <LinearLayout
        android:id="@+id/content_event__layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/content_event__collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/content_event__collect_image"
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:src="@mipmap/collect" />

            <TextView
                android:id="@+id/content_event__collect_text"
                style="@style/WrapWrap"
                android:text="@string/text_film_collection"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_13" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/content_event__share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:src="@mipmap/share" />

            <TextView
                style="@style/WrapWrap"
                android:text="@string/text_film_share"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/content_event__join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/orange_ff7b0f"
            android:gravity="center"
            android:text="@string/text_want_to"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15" />
    </LinearLayout>


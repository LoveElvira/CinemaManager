<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yyjlr.tickets.activity.setting.MessageDetailsActivity"
    tools:showIn="@layout/activity_message_details">

    <LinearLayout
        style="@style/MatchMatch"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/size_20">

        <TextView
            android:id="@+id/content_message_details__title"
            style="@style/WrapWrap"
            android:textColor="@color/black_363636"
            android:textSize="@dimen/text_15"
            android:lineSpacingMultiplier="1.4"/>

        <TextView
            android:id="@+id/content_message_details__message"
            style="@style/WrapWrap"
            android:layout_marginTop="@dimen/size_10"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_13"
            android:lineSpacingMultiplier="1.5"/>

        <TextView
            android:id="@+id/content_message_details__time"
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/size_10"
            android:gravity="right"
            android:textColor="@color/gray_c3c3c3"
            android:textSize="@dimen/text_10" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/size_15"
    android:paddingRight="@dimen/size_15"
    android:paddingTop="@dimen/size_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.yyjlr.tickets.viewutils.CircleImageView
            android:id="@+id/item_comment__head_image"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_marginRight="@dimen/size_10"
            android:src="@mipmap/icon_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_comment__user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="大家好"
                android:textColor="@color/black_363636"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_comment__user_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_7"
                android:text="你们好"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_comment__send_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一月前"
                    android:textColor="@color/gray_dcdcdc"
                    android:textSize="@dimen/text_10" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/size_5"
        android:alpha="0.5"
        android:background="@color/gray_e7e7e7" />

</LinearLayout>
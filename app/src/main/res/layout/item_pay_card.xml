<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_pay_card__layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingRight="@dimen/size_12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_pay_card__vip_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_12"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/item_pay_card__vip_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_12"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/item_pay_card__vip_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_12"
            android:text="充值"
            android:textColor="@color/blue_2AABE2"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:id="@+id/item_pay_card__vip_select_or_default"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_marginLeft="@dimen/size_5"
            android:src="@mipmap/sale_no_select" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_pay_card__vip_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_12"
        android:paddingRight="@dimen/size_12"
        android:textColor="@color/red_de2500"
        android:textSize="@dimen/text_12"
        android:visibility="gone"/>


</LinearLayout>
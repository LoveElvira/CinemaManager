<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <include
        android:id="@+id/content_pay_select__confirm_pay_layout"
        layout="@layout/content_pay_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/content_pay_select__confirm_pay_layout"
        android:orientation="vertical">

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/MatchWrap"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/content_pay_select__zhifubao"
                style="@style/MatchWrap"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/size_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付宝支付"
                    android:textColor="@color/black_363636"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/content_pay_select__zhifubao_select"
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:src="@mipmap/sale_select" />

            </LinearLayout>
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

        <View
            style="@style/MatchOne"
            android:background="@color/gray_f4f4f4" />

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/MatchWrap"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/content_pay_select__weixin"
                style="@style/MatchWrap"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/size_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微信支付"
                    android:textColor="@color/black_363636"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/content_pay_select__weixin_select"
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:src="@mipmap/sale_no_select" />

            </LinearLayout>
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
    </LinearLayout>

</RelativeLayout>
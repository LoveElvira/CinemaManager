<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_film_sale__layout"
    style="@style/MatchWrap"
    android:orientation="vertical">

    <View
        android:id="@+id/item_film_sale__line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_dash"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_10">

        <ImageView
            android:id="@+id/item_film_sale__select"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/size_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/cancle" />

        <ImageView
            android:id="@+id/item_film_sale__image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                style="@style/MatchWrap"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_film_sale__package"
                    style="@style/WrapWrap"
                    android:ellipsize="end"
                    android:maxEms="4"
                    android:singleLine="true"
                    android:text="套餐1"
                    android:textColor="@color/black_363636"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/item_film_sale__price"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/size_10"
                    android:text="¥20"
                    android:textColor="@color/red_de2500"
                    android:textSize="@dimen/text_15" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_film_sale__package_content"
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/size_5"
                android:maxLines="2"
                android:text="中份爆米花+++++++"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_film_sale__time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:text="2016-08-09~2016-08-16"
                android:textColor="@color/gray_c3c3c3"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_film_sale__add_layout_"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/size_10"
            android:background="@drawable/border_gray"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/item_film_sale__lost_"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_25"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/gray_c3c3c3"
                android:textSize="@dimen/text_18" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_e7e7e7" />

            <TextView
                android:id="@+id/item_film_sale__num_"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_25"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black_363636"
                android:textSize="@dimen/text_14" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_e7e7e7" />

            <TextView
                android:id="@+id/item_film_sale__add_"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_25"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/orange_ff9600"
                android:textSize="@dimen/text_18" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_film_sale__add_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_10"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/size_40"
            android:background="@drawable/border_gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_film_sale__lost"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_30"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/gray_c3c3c3"
                android:textSize="@dimen/text_18" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_e7e7e7" />

            <TextView
                android:id="@+id/item_film_sale__num"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_30"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black_363636"
                android:textSize="@dimen/text_14" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray_e7e7e7" />

            <TextView
                android:id="@+id/item_film_sale__add"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_30"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/orange_ff9600"
                android:textSize="@dimen/text_18" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
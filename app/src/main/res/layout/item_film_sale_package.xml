<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_film_sale__layout"
    style="@style/MatchWrap"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_10"
    android:paddingLeft="@dimen/padding_10"
    android:paddingRight="@dimen/padding_10">

    <View
        android:id="@+id/item_film_sale__line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/magin_10"
        android:background="@drawable/line_dash"
        android:layerType="software"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_80"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/WrapWrap"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true"
            android:layout_marginRight="@dimen/magin_5">

            <ImageView
                android:id="@+id/item_film_sale__select"
                style="@style/WrapWrap"
                android:scaleType="centerCrop"
                android:src="@mipmap/cancle" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

        <ImageView
            android:id="@+id/item_film_sale__image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/magin_5"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                style="@style/MatchWrap"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_film_sale__package"
                    style="@style/WrapWrap"
                    android:text="套餐1"
                    android:textColor="@color/black_alpha"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/item_film_sale__price"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/magin_10"
                    android:text="¥20"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_film_sale__package_content"
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/magin_5"
                android:text="中份爆米花+++++++"
                android:textColor="@color/black_alpha1"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/item_film_sale__time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/magin_5"
                android:text="2016-08-09~2016-08-16"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_12" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_film_sale__add_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            style="@style/WrapWrap"
            android:background="@drawable/border_gray"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/magin_40">

            <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                style="@style/WrapWrap"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/bg_shadow"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <TextView
                    android:id="@+id/item_film_sale__lost"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_30"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/gray_alpha1"
                    android:textSize="@dimen/text_18" />
            </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/item_film_sale__num"
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_30"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black_alpha1"
                android:textSize="@dimen/text_14" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                style="@style/WrapWrap"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/bg_shadow"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <TextView
                    android:id="@+id/item_film_sale__add"
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_30"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/gray_alpha1"
                    android:textSize="@dimen/text_18" />
            </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yyjlr.tickets.activity.LoginActivity"
    tools:showIn="@layout/activity_login">

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/size_20"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/size_10">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/text_phone"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_14" />

        <EditText
            android:id="@+id/content_login__phone"
            style="@style/AutoMatch"
            android:layout_marginLeft="@dimen/size_5"
            android:background="@null"
            android:gravity="center|left"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="@color/black_363636"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/size_10">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/text_password"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_14" />

        <EditText
            android:id="@+id/content_login__password"
            style="@style/AutoMatch"
            android:layout_marginLeft="@dimen/size_20"
            android:background="@null"
            android:gravity="center|left"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/black_363636"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/size_20"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/size_10">


        <LinearLayout
            android:id="@+id/content_login__forger_password"
            style="@style/WrapWrap"
            android:orientation="horizontal">

            <TextView
                style="@style/WrapWrap"
                android:padding="5dp"
                android:text="@string/text_forget_password"
                android:textColor="@color/gray_c6c6c6"
                android:textSize="@dimen/text_13" />

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_gravity="center"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/size_10"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_20">


        <Button
            android:id="@+id/content_login__register"
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/size_10"
            android:background="@drawable/radius_gray_4"
            android:text="@string/text_register"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15" />

        <Button
            android:id="@+id/content_login__login"
            style="@style/AutoMatch"
            android:background="@drawable/radius_blue_4"
            android:text="@string/text_login"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15" />
    </LinearLayout>

    <RelativeLayout style="@style/MatchMatch"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/content_login__layout"
            style="@style/MatchWrap"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_20"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/content_login__weixin"
                style="@style/WrapWrap"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/size_5"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_5">

                <ImageView
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:src="@mipmap/weixin" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/size_5"
                    android:text="@string/text_weixin"
                    android:textColor="@color/gray_a1a1a1"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/content_login__friend_circle"
                style="@style/WrapWrap"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/size_5"
                android:paddingLeft="@dimen/size_10"
                android:paddingRight="@dimen/size_10"
                android:paddingTop="@dimen/size_5">

                <ImageView
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:src="@mipmap/friend_circle" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/size_5"
                    android:text="@string/text_friend_circle"
                    android:textColor="@color/gray_a1a1a1"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/content_login__xinlang"
                style="@style/WrapWrap"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/size_5">

                <ImageView
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                    android:src="@mipmap/xinlangweibo" />

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/size_5"
                    android:text="@string/text_xinlang"
                    android:textColor="@color/gray_a1a1a1"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_above="@+id/content_login__layout"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/size_60"
                android:layout_height="0.5dp"
                android:background="@color/gray_c3c3c3" />

            <TextView
                style="@style/WrapWrap"
                android:layout_margin="@dimen/size_5"
                android:padding="@dimen/size_5"
                android:text="@string/text_example_login"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_12" />

            <View
                android:layout_width="@dimen/size_60"
                android:layout_height="0.5dp"
                android:background="@color/gray_c3c3c3" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
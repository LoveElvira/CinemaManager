<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yyjlr.tickets.activity.LoginActivity"
    tools:showIn="@layout/activity_login">

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/height_20"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/text_phone"
            android:textSize="@dimen/text_14" />

        <EditText
            android:id="@+id/content_login__phone"
            style="@style/AutoMatch"
            android:layout_marginLeft="@dimen/magin_5"
            android:background="@null"
            android:gravity="center|right"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="@string/text_password"
            android:textSize="@dimen/text_14" />

        <EditText
            android:id="@+id/content_login__password"
            style="@style/AutoMatch"
            android:layout_marginLeft="@dimen/magin_20"
            android:background="@null"
            android:gravity="center|right"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/height_20"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10">

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/WrapWrap"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/content_login__forger_password"
                style="@style/WrapWrap"
                android:orientation="horizontal">

                <TextView
                    style="@style/WrapWrap"
                    android:padding="5dp"
                    android:text="@string/text_forget_password"
                    android:textSize="@dimen/text_13" />

                <ImageView
                    android:layout_width="@dimen/height_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_gravity="center"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/magin_10"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_20"
        android:paddingRight="@dimen/padding_20">

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/WrapWrap"
            android:layout_marginRight="@dimen/magin_10"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/content_login__register"
                style="@style/MatchMatch"
                android:background="@drawable/selector_btn_gray"
                android:text="@string/text_register"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/AutoMatch"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/content_login__login"
                style="@style/MatchMatch"
                android:background="@drawable/selector_btn_blue"
                android:text="@string/text_login"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
    </LinearLayout>

    <RelativeLayout style="@style/MatchMatch">

        <LinearLayout
            android:id="@+id/content_login__layout"
            style="@style/MatchWrap"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/magin_20"
            android:gravity="center"
            android:orientation="horizontal">

            <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                style="@style/WrapWrap"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/bg_shadow"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <LinearLayout
                    android:id="@+id/content_login__weixin"
                    style="@style/WrapWrap"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/padding_5"
                    android:paddingBottom="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10">
                    <ImageView
                        android:layout_width="@dimen/height_40"
                        android:layout_height="@dimen/height_40"
                        android:src="@mipmap/weixin"/>
                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/text_weixin"
                        android:textSize="@dimen/text_12"
                        android:layout_marginTop="@dimen/magin_5"/>
                </LinearLayout>
            </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

            <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                style="@style/WrapWrap"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/bg_shadow"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">
                <LinearLayout
                    android:id="@+id/content_login__qq"
                    style="@style/WrapWrap"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/padding_5"
                    android:paddingBottom="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_10"
                    android:paddingRight="@dimen/padding_10">
                    <ImageView
                        android:layout_width="@dimen/height_40"
                        android:layout_height="@dimen/height_40"
                        android:src="@mipmap/qq"/>
                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/text_qq"
                        android:textSize="@dimen/text_12"
                        android:layout_marginTop="@dimen/magin_5"/>
                </LinearLayout>

            </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

            <com.yyjlr.tickets.viewutils.MaterialRippleLayout
                style="@style/WrapWrap"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/bg_shadow"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">
                <LinearLayout
                    android:id="@+id/content_login__xinlang"
                    style="@style/WrapWrap"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/padding_5">
                    <ImageView
                        android:layout_width="@dimen/height_40"
                        android:layout_height="@dimen/height_40"
                        android:src="@mipmap/xinlangweibo"/>
                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/text_xinlang"
                        android:textSize="@dimen/text_12"
                        android:layout_marginTop="@dimen/magin_5"/>
                </LinearLayout>

            </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_above="@+id/content_login__layout"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/height_60"
                android:layout_height="0.5dp"
                android:background="@color/gray" />

            <TextView
                style="@style/WrapWrap"
                android:layout_margin="@dimen/magin_5"
                android:padding="@dimen/padding_5"
                android:text="@string/text_example_login"
                android:textSize="@dimen/text_12" />

            <View
                android:layout_width="@dimen/height_60"
                android:layout_height="0.5dp"
                android:background="@color/gray" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
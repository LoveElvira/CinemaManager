<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/content_film_sale__cancel_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_5"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/content_select_coupon__cancel"
                android:layout_width="@dimen/size_25"
                android:layout_height="@dimen/size_25"
                android:src="@mipmap/sale_cancel" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/size_20"
                android:background="@color/gray_f4f4f4" />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_15">

            <TextView
                android:id="@+id/content_select_coupon__title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/size_20"
                android:text="兑换券"
                android:textColor="@color/black_363636" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_12"
                android:paddingRight="@dimen/size_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="券号："
                    android:textColor="@color/gray_929292"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/content_select_coupon__edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入电子码"
                    android:inputType="number"
                    android:textColor="@color/gray_929292"
                    android:textColorHint="@color/red_de2500"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/content_select_coupon__add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_orange_4"
                    android:paddingBottom="@dimen/size_7"
                    android:paddingLeft="@dimen/size_15"
                    android:paddingRight="@dimen/size_15"
                    android:paddingTop="@dimen/size_7"
                    android:text="添加"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/content_select_coupon__listview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_260"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginRight="@dimen/size_30"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="left"
                android:text="添加后请勾选使用！"
                android:textColor="@color/red_de2500"
                android:textSize="@dimen/text_10" />


            <!--radius_blue_4-->
            <TextView
                android:id="@+id/content_select_coupon__confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginRight="@dimen/size_30"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/radius_orange_4"
                android:gravity="center"
                android:padding="@dimen/size_12"
                android:text="@string/text_confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
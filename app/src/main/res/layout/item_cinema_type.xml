<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_cinema_type__layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_10">

        <ImageView
            android:id="@+id/item_cinema_type__image"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_marginRight="@dimen/size_10" />

        <TextView
            android:id="@+id/item_cinema_type__text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:id="@+id/item_cinema_type__right_image"
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:layout_marginRight="@dimen/size_10"
            android:visibility="gone" />
    </LinearLayout>

    <View
        style="@style/MatchOne"
        android:background="@color/gray_f4f4f4" />

</LinearLayout>
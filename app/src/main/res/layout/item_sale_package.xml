<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_sale_package__cardview"
    style="@style/MatchWrap"
    android:layout_marginBottom="@dimen/magin_5"
    android:layout_marginLeft="@dimen/magin_10"
    android:layout_marginRight="@dimen/magin_10"
    android:layout_marginTop="@dimen/magin_5"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_100"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_sale_package__image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/magin_5"
            android:layout_marginTop="@dimen/magin_5"
            android:layout_weight="1.5"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <TextView
                android:id="@+id/item_sale__package_name"
                style="@style/WrapWrap"
                android:layout_marginBottom="@dimen/magin_5"
                android:textColor="@color/black_alpha"
                android:textSize="@dimen/text_15" />

            <TextView
                android:id="@+id/item_sale__package_content"
                style="@style/WrapWrap"
                android:textColor="@color/black_alpha1"
                android:textSize="@dimen/text_13" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:orientation="horizontal">

                <FrameLayout
                    style="@style/WrapWrap"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/item_sale__price_layout"
                        style="@style/WrapWrap"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/WrapWrap"
                            android:text="@string/text_original_price"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_10" />

                        <TextView
                            android:id="@+id/item_sale__original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_alpha"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            style="@style/WrapWrap"
                            android:text="@string/text_money_unit"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/text_10" />
                    </LinearLayout>

                    <View
                        android:id="@+id/item_sale__line"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_gravity="left|center"
                        android:background="@color/red" />
                </FrameLayout>
                <LinearLayout
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/magin_20"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/text_app_price"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_10" />

                    <TextView
                        android:id="@+id/item_sale__app_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/btn_orange"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        style="@style/WrapWrap"
                        android:text="@string/text_money_unit"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_10" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            style="@style/WrapWrap"
            android:layout_gravity="center"
            android:layout_margin="@dimen/magin_10"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <Button
                android:id="@+id/item_sale_package__right"
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:background="@mipmap/cicle_right" />
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
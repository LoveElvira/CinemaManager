<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yyjlr.tickets.activity.setting.SettingAccountActivity"
    tools:showIn="@layout/activity_mysetting_account">

    <com.yyjlr.tickets.viewutils.MaterialRippleLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/magin_10"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            android:id="@+id/content_setting_account__head_image_layout"
            style="@style/MatchWrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头像"
                android:textColor="@color/gray_alpha1"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:id="@+id/content_setting_account__head_image"
                android:layout_width="@dimen/height_80"
                android:layout_height="@dimen/height_80"
                android:scaleType="centerCrop"
                android:src="@mipmap/image_2" />

            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>
    </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

    <com.yyjlr.tickets.viewutils.MaterialRippleLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/magin_10"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            android:id="@+id/content_setting_account__username_layout"
            style="@style/MatchWrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                style="@style/WrapWrap"
                android:text="昵称"
                android:textColor="@color/gray_alpha1"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/content_setting_account__username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="小蛮缠"
                android:textColor="@color/black_alpha1"
                android:textSize="@dimen/text_14" />

            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>
    </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

    <View
        style="@style/MatchOne"
        android:background="@color/gray" />

    <com.yyjlr.tickets.viewutils.MaterialRippleLayout
        style="@style/MatchWrap"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            android:id="@+id/content_setting_account__sex_layout"
            style="@style/MatchWrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                style="@style/WrapWrap"
                android:text="性别"
                android:textColor="@color/gray_alpha1"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/content_setting_account__sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="女"
                android:textColor="@color/black_alpha1"
                android:textSize="@dimen/text_14" />

            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>
    </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

    <View
        style="@style/MatchOne"
        android:background="@color/gray" />

    <com.yyjlr.tickets.viewutils.MaterialRippleLayout
        style="@style/MatchWrap"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            android:id="@+id/content_setting_account__birthday_layout"
            style="@style/MatchWrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                style="@style/WrapWrap"
                android:text="生日"
                android:textColor="@color/gray_alpha1"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/content_setting_account__birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1994-01-01"
                android:textColor="@color/black_alpha1"
                android:textSize="@dimen/text_14" />

            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>

    </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

    <com.yyjlr.tickets.viewutils.MaterialRippleLayout
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/magin_10"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            android:id="@+id/content_setting_account__phone_layout"
            style="@style/MatchWrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                style="@style/WrapWrap"
                android:text="手机号码"
                android:textColor="@color/gray_alpha1"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/content_setting_account__phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="150****1234"
                android:textColor="@color/black_alpha1"
                android:textSize="@dimen/text_14" />

            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>
    </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

    <View
        style="@style/MatchOne"
        android:background="@color/gray" />

    <com.yyjlr.tickets.viewutils.MaterialRippleLayout
        style="@style/MatchWrap"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/bg_shadow"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">

        <LinearLayout
            android:id="@+id/content_setting_account__password"
            style="@style/MatchWrap"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="修改密码"
                android:textColor="@color/gray_alpha1"
                android:textSize="@dimen/text_14" />

            <ImageView
                style="@style/WrapWrap"
                android:src="@mipmap/right_arrow" />
        </LinearLayout>
    </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

</LinearLayout>
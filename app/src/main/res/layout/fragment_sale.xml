<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatch"
    android:orientation="vertical"
    tools:context="com.yyjlr.tickets.MainActivity">

    <include layout="@layout/base_toolbar_" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_70"
        android:gravity="center"
        android:orientation="horizontal">

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/fragment_sale__package_layout"
                style="@style/MatchMatch"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/size_5">

                <ImageView
                    android:id="@+id/fragment_sale__package_image"
                    style="@style/WrapWrap"
                    android:background="@mipmap/sale_package_select" />

                <TextView
                    style="@style/WrapWrap"
                    android:paddingTop="@dimen/size_5"
                    android:text="@string/text_sale_package"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>

        <com.yyjlr.tickets.viewutils.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/bg_shadow"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:id="@+id/fragment_sale__sale_layout"
                style="@style/MatchMatch"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/size_5">

                <ImageView
                    android:id="@+id/fragment_sale__sale_image"
                    style="@style/WrapWrap"
                    android:background="@mipmap/sale_sale" />

                <TextView
                    style="@style/WrapWrap"
                    android:paddingTop="@dimen/size_5"
                    android:text="@string/text_sale_sale"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>
        </com.yyjlr.tickets.viewutils.MaterialRippleLayout>
    </LinearLayout>

    <com.yyjlr.tickets.viewutils.SuperSwipeRefreshLayout
        android:id="@+id/fragment_sale__refresh"
        style="@style/MatchMatch">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_sale__listview"
            style="@style/MatchMatch" />
    </com.yyjlr.tickets.viewutils.SuperSwipeRefreshLayout>

</LinearLayout>
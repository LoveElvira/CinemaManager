<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50">

        <ImageView
            android:id="@+id/base_toolbar__bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_title" />

        <LinearLayout
            android:id="@+id/content_listview__search_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/size_10">


            <ImageView
                android:id="@+id/base_toolbar__left_image"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:padding="@dimen/size_15"
                android:src="@mipmap/left_arrow"
                android:tint="@color/white"
                android:visibility="gone" />

            <ImageView
                android:layout_width="@dimen/size_15"
                android:layout_height="@dimen/size_15"
                android:layout_marginLeft="@dimen/size_10"
                android:src="@mipmap/search"
                android:tint="@color/white" />

            <EditText
                android:id="@+id/content_listview__search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:hint="输入商品名称搜索"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:padding="@dimen/size_10"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_f4f4f4"
                android:textSize="@dimen/text_13" />

            <LinearLayout
                android:id="@+id/content_listview__cancel"
                android:layout_width="@dimen/size_30"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/size_15"
                    android:layout_height="@dimen/size_15"
                    android:src="@mipmap/cancel_search" />
            </LinearLayout>

            <TextView
                android:id="@+id/content_listview__go_search"
                android:layout_width="@dimen/size_30"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="@dimen/text_13"
                android:visibility="gone" />

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_sale__sale_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="卖品"
                android:textColor="@color/orange_ff7b0f"
                android:textSize="@dimen/text_13" />

            <View
                android:id="@+id/fragment_sale__sale_line"
                android:layout_width="@dimen/size_30"
                android:layout_height="1dp"
                android:layout_marginTop="-10dp"
                android:background="@color/orange_ff7b0f" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_sale__package_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="套餐"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_13" />

            <View
                android:id="@+id/fragment_sale__package_line"
                android:layout_width="@dimen/size_30"
                android:layout_height="1dp"
                android:layout_marginTop="-10dp"
                android:background="@color/orange_ff7b0f"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_sale__derivative_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="衍生品"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_13" />

            <View
                android:id="@+id/fragment_sale__derivative_line"
                android:layout_width="@dimen/size_30"
                android:layout_height="1dp"
                android:layout_marginTop="-10dp"
                android:background="@color/orange_ff7b0f"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_sale__vip_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="会员卡"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_13" />

            <View
                android:id="@+id/fragment_sale__vip_line"
                android:layout_width="@dimen/size_30"
                android:layout_height="1dp"
                android:layout_marginTop="-10dp"
                android:background="@color/orange_ff7b0f"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/base_toolbar__left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-1dp"
            android:background="@drawable/bg_left_white"
            android:paddingBottom="@dimen/size_5"
            android:paddingLeft="@dimen/size_20"
            android:paddingRight="@dimen/size_20"
            android:paddingTop="@dimen/size_5"
            android:text="卖品"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/base_toolbar__right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-1dp"
            android:background="@drawable/bg_border_right_white"
            android:paddingBottom="@dimen/size_5"
            android:paddingLeft="@dimen/size_20"
            android:paddingRight="@dimen/size_20"
            android:paddingTop="@dimen/size_5"
            android:text="@string/text_sale_package"
            android:textColor="@color/white"
            android:textSize="@dimen/text_13" />

    </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:star="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_home_film__layout"
    android:layout_width="@dimen/size_100"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/size_10"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_home_film__image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_110"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_f4f4f4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_home_film__name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:singleLine="true"
            android:textColor="@color/black_363636"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/item_home_film__look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:text="奇幻城堡"
            android:textColor="@color/gray_929292"
            android:textSize="@dimen/text_11"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/item_home_film__score_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_5"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal">

            <com.yyjlr.tickets.viewutils.Star
                android:id="@+id/item_home_film__star"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_10"
                android:layout_marginTop="@dimen/size_2"
                star:starBackground="@mipmap/star_gray"
                star:starClickable="false"
                star:starDistance="1dp"
                star:starDrawBackground="@mipmap/star_yellow"
                star:starHeight="@dimen/size_10"
                star:starWidth="@dimen/size_10"
                star:starsNum="5" />

            <TextView
                android:id="@+id/item_home_film__score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_weight="1"
                android:gravity="left"
                android:text="8.0"
                android:textColor="@color/gray_929292"
                android:textSize="@dimen/text_11" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>